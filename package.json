{
  "name": "findy-wallet-pwa",
  "version": "0.5.21",
  "license": "Apache-2.0",
  "dependencies": {
    "@apollo/client": "^3.3.20",
    "graphql": "^15.5.1",
    "grommet": "^2.17.3",
    "grommet-icons": "^4.6.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-linkify": "^1.0.0-alpha",
    "react-qr-reader": "^2.2.1",
    "react-router-dom": "^5.2.0",
    "react-scrollable-feed": "^1.3.1",
    "styled-components": "^5.3.0",
    "subscriptions-transport-ws": "^0.9.19"
  },
  "scripts": {
    "deps:update": "npm-outdated-to-latest",
    "start": "react-scripts start",
    "build": "react-scripts build && npm run build:version && npm run licenses:report",
    "build:version": "echo v$(./tools/version.sh) > build/version.txt",
    "format": "prettier --write src/**/*.{ts,tsx}",
    "licenses:report": "node ./tools/check-licenses.js report ./build/licenses.txt",
    "test": "react-scripts test",
    "test:lint": "eslint ./src",
    "test:e2e": "./e2e/onboard.sh && nightwatch ./e2e",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app",
    "ignorePatterns": [
      "**/*_pb.js"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^13.1.9",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.4",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "@types/react-linkify": "^1.0.0",
    "@types/react-router-dom": "^5.1.7",
    "@types/styled-components": "^5.1.10",
    "async": "^3.2.0",
    "chromedriver": "^91.0.1",
    "husky": "^6.0.0",
    "js-green-licenses": "^3.0.1",
    "lint-staged": "^11.0.0",
    "nightwatch": "^1.7.6",
    "npm-outdated-to-latest": "^1.0.3",
    "prettier": "^2.3.1",
    "react-scripts": "^4.0.3",
    "typescript": "^4.3.4"
  }
}
