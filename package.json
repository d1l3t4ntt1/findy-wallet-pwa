  "private": true,
  "dependencies": {
    "@apollo/client": "^3.3.15",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.1.4",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.41",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.3",
    "@types/react-router-dom": "^5.1.6",
    "@types/styled-components": "^5.1.9",
    "graphql": "^15.4.0",
    "grommet": "^2.17.1",
    "grommet-icons": "^4.5.0",
    "license-checker": "^25.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-qr-reader": "^2.2.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.3",
    "react-scrollable-feed": "^1.3.0",
    "styled-components": "^5.2.3",
    "subscriptions-transport-ws": "^0.9.18",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "deps:update": "npm-outdated-to-latest",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "format": "prettier --write src/**/*.{ts,tsx}",
    "test": "react-scripts test",
    "test:lint": "eslint ./src",
    "test:e2e": "nightwatch ./e2e",
    "eject": "react-scripts eject",
    "postinstall": "./node_modules/license-checker/bin/license-checker --json --direct > public/licenses.json && ./node_modules/license-checker/bin/license-checker --exclude 'PD, MIT, MIT OR X11, BSD, ISC, Apache-2.0, Unlicense, CC0-1.0, CC-BY-4.0, CC-BY-3.0, WTFPL, MPL-1.1, MPL-2.0, ODC-By-1.0' --json > licenses-unresolved.json"
  },
  "eslintConfig": {
    "extends": "react-app",
    "ignorePatterns": [
      "**/*_pb.js"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "async": "^3.2.0",
    "chromedriver": "^88.0.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.1",
    "nightwatch": "^1.6.3",
    "npm-outdated-to-latest": "^1.0.3",
    "prettier": "^2.1.2"
  }
}
